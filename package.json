{
	"name": "ask-and-trust",
	"version": "2.0.0",
	"private": true,
	"description": "Development of an online survey platform",
	"directories": {
		"doc": "docs",
		"scripts": "scripts"
	},
	"workspaces": [
		"app/frontend",
		"app/backend"
	],
	"scripts": {
		"start": "docker compose up --build",
		"prepare": "node -e \"process.env.CI !== 'true' && require('child_process').execSync('husky install', {stdio: 'inherit'})\"",
		"format": "npx prettier --write \"**/*.{js,jsx,ts,tsx}\"",
		"prettier:check": "npx prettier --check \"**/*.{js,jsx,ts,tsx}\"",
		"lint": "cd app/frontend && npm run lint",
		"lint:fix": "cd app/frontend && npm run lint -- --fix",
		"type-check": "npm run type-check:frontend && npm run type-check:backend",
		"type-check:frontend": "cd app/frontend && npx tsc --noEmit",
		"type-check:backend": "cd app/backend && npx tsc --noEmit",
		"test": "cd app/frontend && npm run test",
		"test:coverage": "cd app/frontend && npm run test -- --coverage --reporter=verbose",
		"build": "cd app/backend && npm run build",
		"build:frontend": "cd app/frontend && npm run build",
		"docs": "typedoc",
		"release": "standard-version",
		"release:minor": "standard-version --release-as minor",
		"release:major": "standard-version --release-as major",
		"release:patch": "standard-version --release-as patch",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
		"commit": "cz"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.1",
		"@commitlint/config-conventional": "^18.6.3",
		"commitizen": "^4.3.1",
		"conventional-changelog-cli": "^5.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"prettier": "3.5.3",
		"standard-version": "^9.5.0",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"typedoc": "^0.25.13"
	},
	"overrides": {
		"standard-version": {
			"find-up": "5.0.0"
		}
	},
	"keywords": [
		"survey"
	],
	"author": "YohanGH, AlexDDevv, ArthurVS05, corenthin95",
	"license": "GPL-2.0"
}
